do
    local p = FruitPanel
    local y = 6
    local label = Instance.new("TextLabel", p)
    label.Size = UDim2.new(1, 0, 0, 24)
    label.Position = UDim2.new(0, 0, 0, y)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.TextColor3 = Color3.fromRGB(255, 255, 0) 
    label.Text = "AUTO FRUIT PICKUP (NO TELEPORT)" -- Đã đổi tên
    y = y + 30
    
    local scrollFrame = Instance.new("ScrollingFrame", p)
    scrollFrame.Size = UDim2.new(1, 0, 1, -y)
    scrollFrame.Position = UDim2.new(0, 0, 0, y)
    scrollFrame.BackgroundTransparency = 1
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0) 
    
    
    local buttonHeight = 30
    local spacing = 5
    local buttonMargin = 10 
    local innerSpacing = 10 
    
    
    local buttonWidth = (Panel_W - (buttonMargin * 2) - innerSpacing) / 2
    local currentY = buttonMargin
    
    for i, fruitName in ipairs(RF_RareDevilfruit) do
        local btn = Instance.new("TextButton", scrollFrame)
        btn.Size = UDim2.new(0, buttonWidth, 0, buttonHeight)
        
        
        local columnIndex = (i - 1) % 2
        local rowIndex = math.floor((i - 1) / 2)
        
        
        local posX = buttonMargin + columnIndex * (buttonWidth + innerSpacing)
        local posY = buttonMargin + rowIndex * (buttonHeight + spacing)

        btn.Position = UDim2.new(0, posX, 0, posY)
        
        btn.Text = fruitName .. ": OFF"
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 13
        btn.TextColor3 = Color3.fromRGB(230, 230, 230)
        btn.BackgroundColor3 = Color3.fromRGB(60, 60, 62)
        btn.BackgroundTransparency = 0.15
        btn.BorderSizePixel = 0
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
        
        if columnIndex == 0 then
            currentY = btn.Position.Y.Offset
        end

        btn.MouseButton1Click:Connect(function()
            local state = not AutoFruitState[fruitName]
            AutoFruitState[fruitName] = state
            btn.Text = fruitName .. ": " .. (state and "ON" or "OFF")
            btn.BackgroundColor3 = state and Color3.fromRGB(255, 170, 0) or Color3.fromRGB(60, 60, 62)
            btn.BackgroundTransparency = state and 0.1 or 0.15
        end)
    end
    
    local numRows = math.ceil(#RF_RareDevilfruit / 2)
    local totalHeight = numRows * (buttonHeight + spacing) + buttonMargin + spacing 
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, totalHeight) 

end

