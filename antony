do
    local p = FruitPanel
    local y = 6
    local label = Instance.new("TextLabel", p)
    label.Size = UDim2.new(1, 0, 0, 26)
    label.Position = UDim2.new(0, 0, 0, y)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.TextColor3 = Color3.fromRGB(255, 255, 0) 
    label.Text = "AUTO FRUIT PICKUP (RemoteEvent)"
    y = y + 30
    
    local scrollFrame = Instance.new("ScrollingFrame", p)
    scrollFrame.Size = UDim2.new(1, 0, 1, -y)
    scrollFrame.Position = UDim2.new(0, 0, 0, y)
    scrollFrame.BackgroundTransparency = 1
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0) 
    
    local listLayout = Instance.new("UIListLayout", scrollFrame)
    listLayout.Padding = UDim.new(0, 6)
    listLayout.SortOrder = Enum.SortOrder.LayoutOrder
    listLayout.HorizontalAlignment = Enum.HorizontalAlignment.Left
    listLayout.VerticalAlignment = Enum.VerticalAlignment.Top
    
    local buttonsPerRow = 2
    local buttonWidth = 150
    local buttonHeight = 34
    local spacing = 10
    local currentX = spacing
    local currentY = spacing

    for i, fruitName in ipairs(RF_RareDevilfruit) do
        local btn = Instance.new("TextButton", scrollFrame)
        btn.Size = UDim2.new(0, buttonWidth, 0, buttonHeight)
        btn.Text = fruitName .. ": OFF"
        btn.Font = Enum.Font.GothamBold
        btn.TextSize = 14
        btn.TextColor3 = Color3.fromRGB(230, 230, 230)
        btn.BackgroundColor3 = Color3.fromRGB(60, 60, 62)
        btn.BorderSizePixel = 0
        Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
        
        -- Cập nhật vị trí thủ công (do không dùng UIGridLayout)
        -- Sử dụng LayoutOrder và UIListLayout sẽ dễ hơn cho scrolling
        btn.LayoutOrder = i

        btn.MouseButton1Click:Connect(function()
            local state = not AutoFruitState[fruitName]
            AutoFruitState[fruitName] = state
            btn.Text = fruitName .. ": " .. (state and "ON" or "OFF")
            btn.BackgroundColor3 = state and Color3.fromRGB(255, 170, 0) or Color3.fromRGB(60, 60, 62)
        end)
    end
    
    -- Điều chỉnh CanvasSize sau khi tạo tất cả các nút (để ScrollingFrame hoạt động)
    local numItems = #RF_RareDevilfruit
    local totalHeight = numItems * (buttonHeight + spacing) + spacing 
    scrollFrame.CanvasSize = UDim2.new(0, 0, 0, totalHeight)

end

