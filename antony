local function updateHakiUI()
    if not HakiStatusLabel or not HakiHoldQBtn then return end
    HakiStatusLabel.Text = string.format("%s | Hold: %ds | Presses: %d",
        isHoldingHaki and "üü¢ ON" or "üî¥ OFF",
        HOLD_DURATION,
        pressCount
    )
    HakiHoldQBtn.Text = string.format("üîò Also Hold Q: %s", useQKey and "ON" or "OFF")
    HakiHoldQBtn.BackgroundColor3 = useQKey and Color3.fromRGB(0, 120, 0) or Color3.fromRGB(80, 80, 80)
end

HakiHoldQBtn.MouseButton1Click:Connect(function()
    useQKey = not useQKey
    updateHakiUI()
    if HakiInfoLabel then
        HakiInfoLabel.Text = useQKey and "Gi·ªØ c·∫£ ph√≠m Q & R" or "Ch·ªâ gi·ªØ ph√≠m R"
    end
end)

-- X√ìA B·ªé PH√çM F6 ƒê·ªÇ B·∫¨T/T·∫ÆT HAKI (KH√îNG C·∫¶N N·ªÆA)

-- ƒê·ªåC GUI VALUE ƒê∆†N GI·∫¢N
local function simpleReadGUI_Haki(obj)
    if not obj then return nil end
    local ok, val = pcall(function()
        if obj:IsA("GuiObject") then
            return obj.Size.X.Scale
        end
        return nil
    end)
    return ok and val or nil
end

-- T√åM GUI ƒê∆†N GI·∫¢N - TR√ÅNH MEMORY LEAK
local function simpleFindGUI_Haki()
    local pg = player:FindFirstChild("PlayerGui")
    if not pg then return nil end
    for _, obj in ipairs(pg:GetDescendants()) do
        if obj:IsA("GuiObject") and (obj.Name:lower():find("bar") or obj.Name:lower():find("cooldown")) then
            return obj
        end
    end
    return nil
end

-- H√†m gi·ªØ ph√≠m (hold)
local function holdKey(keyName, holdTime)
    local vim = game:GetService('VirtualInputManager')
    pcall(function()
        vim:SendKeyEvent(true, keyName, false, game)
    end)
    task.wait(holdTime)
    pcall(function()
        vim:SendKeyEvent(false, keyName, false, game)
    end)
end

-- V√íNG L·∫∂P CH√çNH
local mainLoopActive = true
task.spawn(function()
    while mainLoopActive do
        if isHoldingHaki then
            -- T√¨m GUI cooldown
            local targetGUI = nil
            if GuiPathBox.Text ~= "" and GuiPathBox.Text ~= "Auto-detecting GUI..." then
                local ok, obj = pcall(function() return game:FindFirstChild(GuiPathBox.Text, true) end)
                if ok then targetGUI = obj end
            end
            if not targetGUI then
                targetGUI = simpleFindGUI_Haki()
                if targetGUI then
                    GuiPathBox.Text = targetGUI:GetFullName()
                end
            end

            -- N·∫øu v·∫´n kh√¥ng c√≥ GUI ‚Üí gi·ªØ ph√≠m ƒë·ªãnh k·ª≥ m·ªói 10s ƒë·ªÉ tr√°nh treo
            if not targetGUI then
                HakiInfoLabel.Text = "Kh√¥ng t√¨m th·∫•y GUI cooldown ‚Üí fallback gi·ªØ ph√≠m 10s."
                pressCount += 1
                updateHakiUI()
                holdKey(DEFAULT_KEY, HOLD_DURATION)
                if useQKey then holdKey(SECONDARY_KEY, HOLD_DURATION) end
                task.wait(HOLD_DURATION + 1)
                continue
            end

            -- Theo d√µi cooldown bar, c√≥ timeout c·ª©ng
            local cooldownStart = tick()
            local maxWait = 15
            local prevVal = simpleReadGUI_Haki(targetGUI)
            local startedCooldown = false

            while tick() - cooldownStart < maxWait do
                local curVal = simpleReadGUI_Haki(targetGUI)
                if curVal and prevVal and math.abs(curVal - prevVal) > 0.1 then
                    startedCooldown = true
                    break
                end
                task.wait(0.1)
            end

            if startedCooldown then
                local cooldownTimeout = tick()
                while tick() - cooldownTimeout < maxWait do
                    local curVal = simpleReadGUI_Haki(targetGUI)
                    if curVal and (curVal <= 0.05 or curVal >= 0.95) then
                        break
                    end
                    task.wait(0.1)
                end
            end

            -- Sau cooldown ‚Üí gi·ªØ ph√≠m R/Q
            pressCount += 1
            updateHakiUI()
            HakiInfoLabel.Text = string.format("ƒêang gi·ªØ ph√≠m %s%s...", DEFAULT_KEY, useQKey and (" + " .. SECONDARY_KEY) or "")
            local coR = coroutine.create(function() holdKey(DEFAULT_KEY, HOLD_DURATION) end)
            coroutine.resume(coR)
            if useQKey then
                local coQ = coroutine.create(function() holdKey(SECONDARY_KEY, HOLD_DURATION) end)
                coroutine.resume(coQ)
            end
            task.wait(HOLD_DURATION + 0.5)

-- Auto-detect GUI khi start
task.spawn(function()
    task.wait(2)
    local gui = simpleFindGUI_Haki()
    if gui then
        GuiPathBox.Text = gui:GetFullName()
        HakiInfoLabel.Text = "Auto-detected: " .. gui.Name
    else
        HakiInfoLabel.Text = "Kh√¥ng t√¨m th·∫•y GUI cooldown t·ª± ƒë·ªông. H√£y nh·∫≠p th·ªß c√¥ng n·∫øu c·∫ßn."
    end
end)

player.AncestryChanged:Connect(function()
    mainLoopActive = false
end)

